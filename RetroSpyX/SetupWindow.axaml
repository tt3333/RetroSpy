            <Button.Styles>
                <Style Selector="Button:pointerover /template/ ContentPresenter">
                    <Setter Property="Background" Value="#4a657b"/>
                    <Setter Property="TextBlock.Foreground" Value="#efefef"/>
                    <Setter Property="ContentTemplate"></Setter>
                </Style>
            </Button.Styles>
        </Button>
        <ListBox Name="BackgroundListBox" Margin="0,198,10.333,47" Background="#FF1D1D1D" Foreground="#FFCBCBCB" BorderBrush="#FF3E3E42" BorderThickness="2" FontFamily="/Assets/Carlito-Regular.ttf#Carlito" FontSize="16" SelectedIndex="0" HorizontalAlignment="Right" Width="250" Height="254.055" Items="{Binding Backgrounds}" SelectedItem="{Binding Backgrounds.SelectedItem}">
            <ListBox.Styles>
                <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
                    <Setter Property="Background" Value="#4a657b"/>
                    <Setter Property="ContentTemplate">
                        <DataTemplate>
                            <Border>
                                <TextBlock Foreground="#efefef" Text="{Binding Name}"/>
                            </Border>
                        </DataTemplate>
                    </Setter>
                </Style>
            </ListBox.Styles>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Foreground="#efefef" Text="{Binding Name}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
